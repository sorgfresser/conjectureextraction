{
    "zero_optimization": {
        "stage": 3,
	"stage3_gather_16bit_weights_on_model_save": true
    },
    "train_micro_batch_size_per_gpu": 8,
    "gradient_accumulation_steps": 16,
    "optimizer": {
      "type": "AdamW",
      "params": {
        "lr": 1e-5,
        "weight_decay": 0.01,
        "eps": 1e-8,
        "betas": [0.8, 0.999]
      }
    },
    "bf16": {
   "enabled": true
    },
    "scheduler": {
        "type": "WarmupCosineLR",
        "params": {
            "warmup_num_steps": 1000,
            "total_num_steps": 1000000
        }
    }
}
